{
  "manifest_version": 2,
  "name": "SogoTranslation",
  "version": "1.0.0",
  "description": "搜狗翻译",
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "256": "img/256.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/md5.js",
        "js/run.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/48.png",
    "default_title": "SogoTranslation",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "http://www.gjp0609.top",
  "omnibox": {
    "keyword": "sogo"
  },
  "default_locale": "zh_CN",
  "devtools_page": "devtools.html"
}